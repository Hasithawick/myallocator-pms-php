<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false">
    <testsuites>
        <testsuite name="MyAllocator PHP SDK Object Test Suite">
            <directory suffix=".php">./tests/Object/</directory>
        </testsuite>
        <testsuite name="MyAllocator PHP SDK API Test Suite">
            <directory suffix=".php">./tests/Api/</directory>
        </testsuite>
        <testsuite name="MyAllocator PHP SDK Exception Test Suite">
            <directory suffix=".php">./tests/Exception/</directory>
        </testsuite>
    </testsuites>
</phpunit>
